<%- include('../partials/header') %>

<section id="show-page">
  <div>Title:</div>
  <div><%= post.title %></div>

  <br /><br />
  <h2>Comments</h2>
  <form
    id="add-comment-form"
    method="POST"
    action="/posts/<%= post._id %>/comments"
  >
    <label>Comment:</label>
    <textarea name="content"></textarea>

    <input type="submit" value="Add Comment" />
  </form>

  <% if (post.comments.length) { %>
  <table>
    <thead>
      <tr>
        <th>User</th>
        <th>Date</th>
        <th>Comment</th>
      </tr>
    </thead>
    <tbody>
      <% let total = 0 %> <% post.comments.forEach(function(c) { %> <% total +=
      c.comment %>
      <tr>
        <td class="comment-user">
          <img
            alt="avatar"
            src="<%= c.userAvatar %>"
            referrerpolicy="no-referrer"
          /><%= c.userName %>
        </td>
        <td><%= c.createdAt.toLocaleDateString() %></td>
        <td><%= c.content %></td>
        <td><%= c.rating %></td>
        <td>
          <% if (user?._id.equals(c.user._id)) { %>
          <form action="/comments/<%= c._id %>?_method=DELETE" method="POST">
            <button type="submit">X</button>
          </form>
          <% } %>
        </td>
      </tr>
      <% }); %>
      <tr>
        <td colspan="3"></td>
        <td>
          <strong><%= (total / post.comments.length).toFixed(1) %></strong>
        </td>
      </tr>
    </tbody>
  </table>
  <% } else { %>
  <h5>No Comments Yet, Be the First to Leave One!</h5>
  <% } %> <%- include('../partials/footer') %>
</section>
